            ajax: {

                url: "/Admin/task/SearchtProjectList",
                dataType: 'json',
                delay: 200,
                data: function (params) {
                    return {
                        searchTerm: params.term
                    };
                },
                processResults: function (data, params) {
                    return {
                        results: data
                    };
                }
            }
        });
        $("#Proj").val("-1").trigger('change.select2')

