        var DeleteEmployee = function () {
            var taskId = $("#hiddenEmployeeId").val();
            $.ajax({
                type: "GET",
                url: "/Admin/task/DeleteConfrim?taskId=" + taskId,
                success: function (result) {
                    if (result == true) {
                        $("#Mymodaldelete").modal("hide");
                        window.location.reload();
                    } else {
